<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.junlong0716.pickerview.MonthView
        android:id="@+id/mv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:calendarDayCheckedLightColor="@color/calendarDayCheckedLightColor"
        app:calendarDayCheckedLightRadius="3dp"
        app:calendarDayCheckedTextColor="@color/calendarDayCheckedTextColor"
        app:calendarDayCommonTextColor="@color/calendarDayCommonTextColor"
        app:calendarDayDisableTextColor="@color/calendarDayDisableTextColor"
        app:calendarDesCheckedTextColor="@color/calendarDayCheckedTextColor"
        app:calendarDesCommonTextColor="@color/calendarDesCommonTextColor" />

</LinearLayout>